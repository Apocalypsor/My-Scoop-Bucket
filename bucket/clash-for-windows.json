            "hash": "84194fe195e35ac2582cd3afdd39f9ad85b60805f84705de08988d173c170cf9"
        },
        "32bit": {
            "url": "https://github.com/Fndroid/clash_for_windows_pkg/releases/download/0.13.7/Clash.for.Windows.Setup.0.13.7.ia32.exe#/dl.7z",
            "hash": "4d85b44a5234e71eb6c1e91ac7929b91a7a7e10159f895f86648394f6f6091cf"
        }
    },
    "shortcuts": [
        [
            "Clash for Windows.exe",
            "Clash for Windows"
        ]
    ],
    "installer": {
        "script": [
            "Expand-7zipArchive \"$dir\\`$PLUGINSDIR\\app-64.7z\" \"$dir\"",
            "Remove-Item \"$dir\\`$PLUGINSDIR\", \"$dir\\Uninst*\" -Force -Recurse",
            "New-Item \"$dir\\data\" -Type Directory -Force"
        ]
    },
    "pre_install": [
        "if (!(Test-Path \"$persist_dir\\profiles\")) {",
        "    New-Item \"$persist_dir\\profiles\" -Type Directory -Force | Out-Null",
        "}",
        "if (!(Test-Path \"$persist_dir\\cfw-settings.yaml\")) {",
        "    New-Item \"$persist_dir\\profiles\" -Type File -Force | Out-Null",
        "}"
    ],
    "persist": [
        [
            "data\\profiles",
            "profiles"
        ],
        [
            "data\\cfw-settings.yaml",
            "cfw-settings.yaml"
        ]
    ],
    "checkver": "github",
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/Fndroid/clash_for_windows_pkg/releases/download/$version/Clash.for.Windows.Setup.$version.exe#/dl.7z",
                "hash": {
                    "url": "https://github.com/Fndroid/clash_for_windows_pkg/releases/download/$version/sha256sum",
                    "mode": "extract",
                    "regex": "^exe: $sha256"
                }
            },
            "32bit": {
                "url": "https://github.com/Fndroid/clash_for_windows_pkg/releases/download/$version/Clash.for.Windows.Setup.$version.ia32.exe#/dl.7z",
                "hash": {
                    "url": "https://github.com/Fndroid/clash_for_windows_pkg/releases/download/$version/sha256sum",
                    "mode": "extract",
                    "regex": "^ia32-exe: $sha256"
                }
            }
        }
    }
}
