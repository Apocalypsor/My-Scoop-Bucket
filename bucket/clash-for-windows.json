{
    "homepage": "https://github.com/Fndroid/clash_for_windows_pkg",
    "description": "A Windows GUI based on Clash",
    "version": "0.9.3",
    "license": "MIT",
    "url": "https://github.com/Fndroid/clash_for_windows_pkg/releases/download/0.9.3/Clash.for.Windows-0.9.3-win.7z",
    "shortcuts": [
        [
            "Clash for Windows.exe",
            "Clash for Windows"
        ]
    ],
    "checkver": "github",
    "autoupdate": {
        "url": "https://github.com/Fndroid/clash_for_windows_pkg/releases/download/$version/Clash.for.Windows-$version-win.7z",
    },
    "pre_install": [
        "if (!(Test-Path \"$persist_dir\\config.yaml\")) {",
        "    (New-Item -Force -ItemType \"file\" -Path \"$dir\\resources\\static\\files\\config.yaml\") | Out-Null",
        "}"
    ],
    "persist": [
        [
            "resources\\static\\files\\config.yaml",
            "config.yaml"
        ],
        [
            "resources\\static\\files\\profiles",
            "profiles"
        ]
    ]
}
