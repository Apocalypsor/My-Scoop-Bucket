{
    "version": "3.0.1",
    "description": "OpenHashTab is a shell extension for conveniently calculating and checking file hashes from file properties.",
    "homepage": "https://github.com/namazso/OpenHashTab",
    "license": "GPL-3.0",
    "depends": "innounp",
    "url": "https://github.com/namazso/OpenHashTab/releases/download/v3.0.1/OpenHashTab_setup_system.exe",
    "hash": "e1cf603ea6fc081b006b18d10b619a15c29f43d3135a47a32258274132e75551",
    "installer": {
        "script": [
            "if (!(is_admin)) {",
            "    Write-Host \"Administrator rights are required to install $app.\" -ForegroundColor red",
            "    exit 1",
            "}",
            "$installer = \"$dir\\OpenHashTab_setup_system.exe\"",
            "innounp -x $installer -d\"$dir\" -q",
            "if ([Environment]::Is64BitOperatingSystem) {",
            "    Move-Item \"$dir\\{app}\\OpenHashTab,1.dll\" -Destination \"$dir\\OpenHashTab.dll\"",
            "} else {",
            "    Move-Item \"$dir\\{app}\\OpenHashTab,3.dll\" -Destination \"$dir\\OpenHashTab.dll\"",
            "}",
            "regsvr32 /s \"$dir\\OpenHashTab.dll\"",
            "Remove-Item $installer",
            "Remove-Item \"$dir\\install_script.iss\"",
            "Remove-Item \"$dir\\{app}\" -Recurse"
        ]
    },
    "uninstaller": {
        "script": [
            "if (!(is_admin)) {",
            "    Write-Host \"Administrator rights are required to install $app.\" -ForegroundColor red",
            "    exit 1",
            "}",
            "regsvr32 /u /s \"$dir\\OpenHashTab.dll\""
        ]
    },
    "checkver": "github",
    "autoupdate": {
        "url": "https://github.com/namazso/OpenHashTab/releases/download/v$version/OpenHashTab_setup_system.exe"
    }
}
